<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <View
        android:id="@+id/sampleFriendsIcon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/sample_friend_icon_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <View
        android:id="@+id/sampleFriendsUsername"
        android:layout_width="130dp"
        android:layout_height="20dp"
        android:background="@color/gray_lite"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toTopOf="@+id/friendsMember"
        app:layout_constraintStart_toEndOf="@+id/sampleFriendsIcon"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/friendsMember"
        android:layout_width="80dp"
        android:background="@color/gray_lite"
        android:layout_marginStart="5dp"
        android:layout_height="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/sampleFriendsIcon"
        app:layout_constraintTop_toBottomOf="@+id/sampleFriendsUsername" />


    <View
        android:id="@+id/sampleMemberBtn"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:background="@drawable/sample_member_btn_bg"
        app:layout_constraintBottom_toBottomOf="@+id/sampleFriendsIcon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/sampleFriendsIcon" />

</androidx.constraintlayout.widget.ConstraintLayout>